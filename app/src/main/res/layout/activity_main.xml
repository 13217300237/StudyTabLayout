<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    tools:context=".ui.MainActivity">


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="20dp"
        android:clipChildren="false"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"
        tools:background="@color/design_default_color_secondary_variant" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/hankViewpager"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="20dp"
        android:clipChildren="false"
        app:layout_constraintTop_toBottomOf="@id/hankTabLayout"
        tools:background="@color/design_default_color_secondary_variant" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:tabMode="scrollable"
        android:visibility="gone"
        app:tabTextAppearance="@style/no_upcase"
        tools:background="#cccccc" />

    <com.zhou.studytablayout.ui.custom.GreenTabLayout
        android:id="@+id/hankTabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/c4"
        app:layout_constraintTop_toBottomOf="@id/viewpager" />

</androidx.constraintlayout.widget.ConstraintLayout>