<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="GreenTabLayout">

        <attr name="tabViewTextSize" format="dimension|reference" />
        <attr name="tabViewTextSizeSelected" format="dimension|reference" />
        <attr name="tabViewTextColor" format="color|reference" />
        <attr name="tabViewBackgroundColor" format="color|reference" />
        <attr name="tabViewTextColorSelected" format="color|reference" />
        <attr name="tabViewTextPaddingLeft" format="dimension|reference" />
        <attr name="tabViewTextPaddingRight" format="dimension|reference" />
        <attr name="tabViewTextPaddingTop" format="dimension|reference" />
        <attr name="tabViewTextPaddingBottom" format="dimension|reference" />


        <attr name="indicatorColor" format="color|reference" />
        <attr name="indicatorLocationGravity">
            <enum name="TOP" value="0" />
            <enum name="BOTTOM" value="1" />
        </attr>
        <attr name="indicatorWidthMode">
            <enum name="RELATIVE_TAB_VIEW" value="0" />
            <enum name="EXACT" value="1" />
        </attr>
        <attr name="indicatorWidthPercentages" format="float" />
        <attr name="indicatorExactWidth" format="dimension|reference" />
        <attr name="indicatorHeight" format="dimension|reference" />
        <attr name="indicatorAlignMode">
            <enum name="LEFT" value="0" />
            <enum name="CENTER" value="1" />
            <enum name="RIGHT" value="2" />
        </attr>

        <attr name="indicatorMargin" format="dimension|reference" />
        <attr name="indicatorDrawable" format="reference"/>
        <!-- indicator的弹性效果 -->
        <attr name="indicatorElastic" format="boolean"/>
        <attr name="indicatorElasticBaseMultiple" format="float"/>
    </declare-styleable>
</resources>